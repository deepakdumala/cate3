def sum_of_multiples_3_and_5(limit):
    total_sum = 0
    for num in range(1, limit):
        if num % 3 == 0 or num % 5 == 0:
            total_sum += num
    return total_sum

# Example usage
limit = 200
result = sum_of_multiples_3_and_5(limit)
print("Sum of multiples of 3 and 5 below", limit, ":", result)
