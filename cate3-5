def create_list_of_tuples(n):
    return [(i, i**2) for i in range(1, n+1)]

# Example usage
n = int(input("Enter the value of n: "))
list_of_tuples = create_list_of_tuples(n)
print("List of tuples with the first elements as the number and second element as the square of the number:")
print(list_of_tuples)
